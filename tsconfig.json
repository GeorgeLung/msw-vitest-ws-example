{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2023",
    "module": "node20",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
